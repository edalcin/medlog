# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=medlog
DB_USER=medlog_user
DB_PASSWORD=your_secure_password_here

# Application Configuration
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# File Storage
FILES_PATH=./uploads

# Security Secrets (Generate random strings)
SESSION_SECRET=generate_random_string_min_32_characters_here
JWT_SECRET=generate_another_random_string_min_32_characters_here
NEXTAUTH_SECRET=generate_nextauth_random_string_min_32_characters_here
NEXTAUTH_URL=http://localhost:3000

# Admin Configuration
ADMIN_EMAIL=your-admin-email@gmail.com

# Docker Compose (for production)
MYSQL_ROOT_PASSWORD=root_secure_password

# Optional Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,png,jpg,jpeg